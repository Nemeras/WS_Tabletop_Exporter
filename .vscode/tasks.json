{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++.exe build active file",
			"command": "C:\\MinGW\\bin\\g++.exe",
			"args": [
				"-Wall",
				"-std=gnu++11",
				"-g", 
				//"${file}",
				"${workspaceFolder}\\*.cpp",
				"-lgdi32",
				"-Dcimg_use_png",
				"-Dcimg_use_jpeg",
				"-lpng",
				"-ljpeg",
				"-lz",
				"-lgdiplus",
				//"-mwindows",
				"-o",
				"${fileDirname}\\${fileBasenameNoExtension}.exe"
			],
			"options": {
				"cwd": "C:\\MinGW\\bin"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: C:\\MinGW\\bin\\g++.exe"
		}
	]
}